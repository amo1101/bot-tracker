<filter name='sandbox-default-filter'>
  <!-- Allow dhcp, arp -->
  <filterref filter='allow-dhcp'/>
  <filterref filter='allow-arp'/>

  <!-- allow scp to malware repo vm -->
  <rule action='accept' direction='out' priority='600'>
    <tcp dstportstart='22' srcipaddr='$SANDBOX_IP' dstipaddr='$MAL_REPO_IP'/>
  </rule>

  <!-- enable outgoing DNS lookups using UDP -->
  <!-- only allowing to 8.8.8.8, with legitimate source IP-->
  <rule action='accept' direction='out' priority='600'>
    <udp dstportstart='53' srcipaddr='$SANDBOX_IP' dstipaddr='8.8.8.8'/>
  </rule>
  <rule action='accept' direction='out' priority='600'>
    <tcp dstportstart='53' srcipaddr='$SANDBOX_IP' dstipaddr='8.8.8.8'/>
  </rule>

  <!-- drop all other traffic -->
  <rule action='drop' direction='inout' priority='1000'>
    <all/>
  </rule>
</filter>
