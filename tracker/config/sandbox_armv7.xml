      <target dev='vda' bus='virtio'/>
    </disk>
    <interface type='network'>
      <source network='mynet' portgroup='sandbox'/>
    </interface>
    <console type='pty'>
      <target type='serial' port='0'/>
    </console>
  </devices>
</domain>
